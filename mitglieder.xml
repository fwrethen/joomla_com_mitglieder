	<authorEmail>florian (at) paetz.de</authorEmail>
	<authorUrl>www.fw-rethen.de</authorUrl>
	<version>1.2.0</version>
	<description>Die Komponente dient dem Verwalten von Mitgliederlisten</description>

	<scriptfile>script.php</scriptfile>

	<install>
		<schemas>
			<schemapath driver="mysql" charset="utf8">sql/install.sql</schemapath>
		</schemas>
	</install>
	<uninstall>
	</uninstall>
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<files folder="components">
		<filename>index.html</filename>
		<filename>controller.php</filename>
		<filename>mitglieder.php</filename>
		<folder>lib</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>

	<administration>
		<menu>COM_MITGLIEDER_MENU</menu>
		<submenu>
			<menu link="option=com_mitglieder&amp;controller=mitglieder">COM_MITGLIEDER_MENU_MITGLIEDER</menu>
			<menu link="option=com_mitglieder&amp;controller=abteilungen">COM_MITGLIEDER_MENU_ABTEILUNGEN</menu>
			<menu link="option=com_mitglieder&amp;controller=felder">COM_MITGLIEDER_MENU_FELDER</menu>
			<menu link="option=com_mitglieder&amp;controller=listen">COM_MITGLIEDER_MENU_LISTEN</menu>
		</submenu>
		<files folder="admin">
			<filename>config.xml</filename>
			<filename>mitglieder.php</filename>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>lib</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<filename>index.html</filename>
		</files>
		<languages folder="admin/language">
			<language tag="de-DE">de-DE.com_mitglieder.ini</language>
			<language tag="de-DE">de-DE.com_mitglieder.sys.ini</language>
		</languages>
	</administration>

</extension>
